<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="16dp"
        android:elevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="09:00"
            android:textStyle="bold"
            android:id="@+id/film_time1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:singleLine="true"
            android:minLines="2"
            android:layout_alignBottom="@+id/filmsList_name" />
        <ImageView
            android:id="@+id/filmsList_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/film_time1"
            android:layout_toEndOf="@+id/film_time1" />

        <TextView
            android:id="@+id/filmsList_name"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:textStyle="bold"
            android:minLines="2"
            android:text="Example"
            android:textSize="20sp"
            android:layout_alignLeft="@+id/filmsList_description"
            android:layout_alignStart="@+id/filmsList_description" />

            <TextView
                android:id="@+id/filmsList_description"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:textStyle="italic"
                android:text="Example"
                android:textSize="12dp"
                android:layout_below="@+id/filmsList_name"
                android:layout_toRightOf="@+id/filmsList_image"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true" />

            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="10:30"
                android:textStyle="bold"
                android:id="@+id/textView"
                android:singleLine="true"
                android:minLines="2"
                android:layout_below="@+id/film_time1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <!--Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="бронировать"
                android:textSize="10sp"
                android:id="@+id/filmsList_button"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="#05a913" /-->
        </RelativeLayout>
    </FrameLayout>
</RelativeLayout>