<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fragments.MenuItemList"
    android:background="@android:color/white"
    android:id="@+id/fragment_mainLayout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left|center_vertical">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:textStyle="bold"
            android:textSize="32sp"
            android:text="Example"
            android:gravity="center_horizontal|"
            android:id="@+id/cuisine_detail_name" />
        <ImageView
            android:id="@+id/cuisine_detail_image"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="false"
            android:contentDescription="Image"
            android:layout_below="@+id/cuisine_detail_name"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:id="@+id/cuisine_detail_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Цена"
            android:textSize="25sp"
            android:layout_below="@+id/cuisine_detail_image" />
        <Button
            android:id="@+id/cuisine_detail_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Заказать"
            android:textSize="25sp"
            android:layout_alignTop="@+id/cuisine_detail_price"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <TextView
            android:id="@+id/cuisine_detail_description"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Example"
            android:textSize="25sp"
            android:textStyle="italic"
            android:layout_below="@+id/cuisine_detail_price" />

        <!--TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textView"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="82dp" /-->
    </RelativeLayout>
</FrameLayout>